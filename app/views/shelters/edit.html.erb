<h1>Update Information for: </h1><br>
<h2><%= @shelter.name %></h2>

<%= form_tag %>

<%= form_tag("/shelters/#{@shelter.id}/edit", method: :patch) do%>
  <label>Name: </label>
  <input type="text" name="name" value="<%= @shelter.name %>" required>
  <br>
  <br>
  <label>Address: </label>
  <input type='text' name='address' value="<%= @shelter.address %>" required>
  <label>City: </label>
  <input type='text' name='city' value="<%= @shelter.city %>" required>
  <label>State: </label>
  <input type='text' name='state' value="<%= @shelter.state %>" required>
  <label>Zip: </label>
  <input type='text' name='zip' value="<%= @shelter.zip %>" required>
  <br>
  <%= submit_tag %>
<% end %>